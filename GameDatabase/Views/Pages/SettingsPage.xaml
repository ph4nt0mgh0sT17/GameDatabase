<Page x:Class="GameDatabase.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GameDatabase"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingsPage">

    <Grid Background="#eee">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding Path=LanguageText}" Margin="0, 0, 10, 0"/>
                <ComboBox ItemsSource="{Binding LanguageItems}" SelectedItem="{Binding Path=SelectedLanguage}" DisplayMemberPath="Title"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
