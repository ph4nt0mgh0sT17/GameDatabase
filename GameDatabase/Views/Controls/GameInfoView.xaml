<UserControl x:Class="GameDatabase.GameInfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameDatabase"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#BB000000">
        <StackPanel Margin="5">
            <TextBlock Text="{Binding Path=Game.Name}" Foreground="WhiteSmoke" FontSize="20" HorizontalAlignment="Center" Margin="0 0 0 10"/>
            <TextBlock Text="{Binding Path=Game.Summary}" Foreground="WhiteSmoke" FontSize="15" HorizontalAlignment="Center" MaxWidth="350" TextWrapping="Wrap" Margin="0 0 0 10"/>
            <TextBlock Text="{Binding Path=Game.RatingApi}" Foreground="WhiteSmoke" FontSize="15" HorizontalAlignment="Left" MaxWidth="350" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</UserControl>
