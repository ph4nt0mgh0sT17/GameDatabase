<Window x:Class="GameDatabase.GameInformationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameDatabase"
        mc:Ignorable="d"
        Title="GameInformationWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

            <Button Content="Generate version" Command="{Binding GenerateVersionCommand}" Grid.ColumnSpan="2"/>

        <Border Grid.Row="1" Grid.ColumnSpan="2"  BorderThickness="1" BorderBrush="SkyBlue" />

        
            <TextBlock HorizontalAlignment="Center" Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" Text="{Binding Version, Mode=OneWay}" />
        <TextBlock HorizontalAlignment="Center" Grid.Column="1" Grid.Row="1" FontFamily="{StaticResource LatoBlack}" VerticalAlignment="Center" Text="{Binding Version, Mode=OneWay}" />



    </Grid>
</Window>
